---
import Layout from "@/layouts/Layout.astro";
import SEO from "@/components/SEO.astro";
import Stack from "@/components/Stack.astro";

const siteUrl = "http://localhost:4321";

const hardwareItems = [
  {
    name: "MacBook Pro 14\" M3 Max",
    url: "https://www.apple.com/macbook-pro/",
    description: "My primary development machine. The M3 Max chip handles everything I throw at it, from heavy TypeScript builds to running multiple Docker containers."
  },
  {
    name: "LG UltraFine 27\" 4K Monitor",
    url: "https://www.lg.com/us/monitors/lg-27ul850-w-4k-uhd-led-monitor",
    description: "Perfect companion display for development. USB-C connectivity makes it seamless with my MacBook Pro."
  },
  {
    name: "Sony WH-1000XM5",
    url: "https://electronics.sony.com/audio/headphones/headband/p/wh1000xm5-b",
    description: "Best noise-cancelling headphones for deep focus work. Battery lasts all day and the audio quality is exceptional."
  },
  {
    name: "Keychron K3 Pro",
    url: "https://www.keychron.com/products/keychron-k3-pro-qmk-via-wireless-custom-mechanical-keyboard",
    description: "Low-profile mechanical keyboard that's perfect for coding. Hot-swappable switches and wireless connectivity."
  }
];

const softwareItems = [
  {
    name: "VS Code",
    url: "https://code.visualstudio.com/",
    description: "My main code editor with carefully selected extensions. Fast, customizable, and integrates perfectly with my workflow."
  },
  {
    name: "Claude Code",
    url: "https://github.com/anthropics/claude-code",
    description: "AI coding assistant that helps me write better code faster. Invaluable for complex refactorings and exploring new codebases."
  },
  {
    name: "Arc Browser",
    url: "https://arc.net/",
    description: "My primary browser for development and research. The Space organization and command bar make it incredibly productive."
  },
  {
    name: "iTerm2",
    url: "https://iterm2.com/",
    description: "Terminal emulator with split panes, search, and tmux integration. Much more powerful than the default Terminal app."
  },
  {
    name: "Raycast",
    url: "https://www.raycast.com/",
    description: "Productivity launcher that replaced Spotlight for me. Extensions for everything from clipboard history to GitHub PRs."
  },
  {
    name: "Figma",
    url: "https://www.figma.com/",
    description: "Design tool for UI/UX work and prototyping. The collaboration features make it perfect for working with designers."
  }
];
---

<Layout>
  <SEO
    slot="head"
    title="Uses - Daniel Noworyta"
    description="Hardware, software, and tools I use daily for development and content creation."
    canonicalURL={`${siteUrl}/uses`}
    type="website"
  />
  <div class="px-(--inline-padding)">
    <div class="max-w-4xl mx-auto py-12">
      <header class="mb-12">
        <h1
          class="bg-brand-gradient bg-clip-text text-transparent font-medium pb-4"
        >
          Uses
        </h1>
        <p class="text-gray-1100 text-lg">
          Hardware, software, and tools I use daily.
        </p>
      </header>

      <!-- Affiliate Disclosure -->
      <div
        class="mb-8 p-4 bg-gray-200 border-l-4 border-orange-500 rounded-md"
      >
        <p class="text-sm text-gray-1100">
          <strong>Disclosure:</strong> Some links on this page may be affiliate links.
          If you purchase through these links, I may earn a small commission at no
          extra cost to you. I only recommend tools I genuinely use and trust.
        </p>
      </div>

      <!-- Hardware Section -->
      <section class="mb-12">
        <h2 class="text-2xl font-medium mb-6">Hardware</h2>
        <Stack space="calc(var(--spacing) * 6)">
          {
            hardwareItems.map((item) => (
              <div class="group">
                <h3 class="font-medium mb-2">
                  <a
                    href={item.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-orange-600 hover:text-orange-700 transition-colors"
                  >
                    {item.name}
                  </a>
                </h3>
                <p class="text-gray-1100">{item.description}</p>
              </div>
            ))
          }
        </Stack>
      </section>

      <!-- Software Section -->
      <section class="mb-12">
        <h2 class="text-2xl font-medium mb-6">Software</h2>
        <Stack space="calc(var(--spacing) * 6)">
          {
            softwareItems.map((item) => (
              <div class="group">
                <h3 class="font-medium mb-2">
                  <a
                    href={item.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-orange-600 hover:text-orange-700 transition-colors"
                  >
                    {item.name}
                  </a>
                </h3>
                <p class="text-gray-1100">{item.description}</p>
              </div>
            ))
          }
        </Stack>
      </section>
    </div>
  </div>
</Layout>
