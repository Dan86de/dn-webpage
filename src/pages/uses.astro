---

<Layout>
  <SEO
    slot="head"
    title="Uses - Daniel Noworyta"
    description="Hardware, software, and tools I use daily for development and content creation."
    canonicalURL={`${siteUrl}/uses`}
    type="website"
  />
  <div class="px-(--inline-padding)">
    <div class="max-w-4xl mx-auto py-12">
      <header class="mb-12">
        <h1
          class="bg-brand-gradient bg-clip-text text-transparent font-medium pb-4"
        >
          Uses
        </h1>
        <p class="text-gray-1100 text-lg">
          Hardware, software, and tools I use daily.
        </p>
      </header>

      <!-- Affiliate Disclosure -->
      <div
        class="mb-8 p-4 bg-gray-200 border-l-4 border-orange-500 rounded-md"
      >
        <p class="text-sm text-gray-1100">
          <strong>Disclosure:</strong> Some links on this page may be affiliate links.
          If you purchase through these links, I may earn a small commission at no
          extra cost to you. I only recommend tools I genuinely use and trust.
        </p>
      </div>

      <!-- Hardware Section -->
      <section class="mb-12">
        <h2 class="pb-6 bg-brand-gradient bg-clip-text text-transparent transition-colors">Hardware</h2>
        <Stack space="calc(var(--spacing) * 6)">
          {
            hardwareItems.map((item) => (
              <a
                href={item.url}
                target="_blank"
                rel="noopener noreferrer"
                class="group block"
              >
                <h3 class="body-large mb-2 text-gray-1200 group-hover:text-gray-1100 transition-colors">
                  {item.name}
                </h3>
                <p class="text-gray-1100">{item.description}</p>
              </a>
            ))
          }
        </Stack>
      </section>

      <!-- Software Section -->
      <section class="mb-12">
        <h2 class="pb-6 bg-brand-gradient bg-clip-text text-transparent transition-colors">Software</h2>
        <Stack space="calc(var(--spacing) * 6)">
          {
            softwareItems.map((item) => (
              <a
                href={item.url}
                target="_blank"
                rel="noopener noreferrer"
                class="group block"
              >
                <h3 class="body-large mb-2 text-gray-1200 group-hover:text-gray-1100 transition-colors">
                  {item.name}
                </h3>
                <p class="text-gray-1100">{item.description}</p>
              </a>
            ))
          }
        </Stack>
      </section>

    </div>
  </div>
</Layout>
