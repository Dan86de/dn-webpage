---
export interface Props {
  src: string;
  alt: string;
  caption?: string;
}

const { src, alt, caption } = Astro.props;
---

<figure class="my-6">
  <img src={src} alt={alt} class="w-full rounded-lg" />
  {caption && <figcaption class="text-center text-sm text-gray-800 mt-2 italic">{caption}</figcaption>}
</figure>
